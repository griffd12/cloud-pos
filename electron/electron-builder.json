{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.cloudpos.desktop",
  "productName": "Cloud POS",
  "copyright": "Copyright Â© 2024",
  "directories": {
    "output": "electron-dist"
  },
  "files": [
    "dist/public/**/*",
    "electron/**/*",
    "!electron-dist",
    "node_modules/better-sqlite3/**/*",
    "node_modules/bindings/**/*",
    "node_modules/file-uri-to-path/**/*",
    "node_modules/prebuild-install/**/*",
    "node_modules/node-abi/**/*",
    "node_modules/keytar/**/*",
    "node_modules/ws/**/*",
    "node_modules/electron-updater/**/*",
    "node_modules/builder-util-runtime/**/*",
    "node_modules/lazy-val/**/*",
    "node_modules/semver/**/*",
    "node_modules/tiny-typed-emitter/**/*",
    "node_modules/js-yaml/**/*",
    "node_modules/argparse/**/*",
    "node_modules/lodash.escaperegexp/**/*",
    "node_modules/lodash.isequal/**/*",
    "node_modules/fs-extra/**/*",
    "node_modules/graceful-fs/**/*",
    "node_modules/jsonfile/**/*",
    "node_modules/universalify/**/*",
    "node_modules/debug/**/*",
    "node_modules/ms/**/*",
    "node_modules/sax/**/*",
    "node_modules/serialport/**/*",
    "node_modules/@serialport/**/*"
  ],
  "asarUnpack": [
    "node_modules/better-sqlite3/**/*",
    "node_modules/bindings/**/*",
    "node_modules/file-uri-to-path/**/*",
    "node_modules/keytar/**/*",
    "node_modules/serialport/**/*",
    "node_modules/@serialport/**/*"
  ],
  "extraResources": [
    {
      "from": "electron/assets",
      "to": "assets"
    }
  ],
  "publish": [
    {
      "provider": "github",
      "owner": "griffd12",
      "repo": "cloud-pos",
      "releaseType": "release"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "artifactName": "Cloud-POS-${version}-Setup.${ext}",
    "icon": "electron/assets/icon.png",
    "requestedExecutionLevel": "asInvoker"
  },
  "nsis": {
    "oneClick": true,
    "allowToChangeInstallationDirectory": false,
    "createDesktopShortcut": false,
    "createStartMenuShortcut": true,
    "shortcutName": "Cloud POS",
    "include": "electron/installer.nsh",
    "perMachine": true,
    "allowElevation": true,
    "installerIcon": "electron/assets/icon.ico",
    "uninstallerIcon": "electron/assets/icon.ico",
    "menuCategory": "Cloud POS",
    "runAfterFinish": true,
    "installerSidebar": null
  },
  "extraMetadata": {
    "main": "electron/main.cjs",
    "version": "1.4.11"
  },
  "buildDependenciesFromSource": false,
  "npmRebuild": true
}
